    <script>

        var a = window.document.getElementById('area')

        function clicar() {
            a.innerText = 'clicou!'

        }

        function entrar() {
            a.innerText = 'Entrou!'

        }
        function sair(){
            a.innerText = 'Saiu!'


        }

    </script>
